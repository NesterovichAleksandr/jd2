<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC ""
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.pvt.pojo">
    <class name="Employee">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="cellPhone"/>
        <property name="firstName"/>
        <property name="lastName"/>
        <many-to-one name="department" class="Department" cascade="save-update" not-null="true"/>
        <one-to-one name="employeeDetails" class="EmployeeDetails" cascade="all"/>
    </class>
</hibernate-mapping>